/*CRIANDO A TABELA - CREATING THE TABLE*/
CREATE TABLE TBClientes (
    ID INT PRIMARY KEY,
    Name VARCHAR(50),
    Street VARCHAR(50),
    City VARCHAR(50),
    State VARCHAR(50),
    CreditLimit DECIMAL(10,2)
);


